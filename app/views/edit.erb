<h1>Edit Article</h1>
<form method="POST" action="/articles/<%= @article.id %>">
<input id="hidden" type="hidden" name="_method" value="PATCH">
    <label for="title"> Article Title <input type="text" name="title" value="<%= @article.title %>"/> </label> <br>
    <label for="content"> Article Content <textarea type="text" name="content" value="<%= @article.content %>"> <%= @article.content %> </textarea> </label> <br>
    <input type="submit" value="SUBMIT"/>
</form>